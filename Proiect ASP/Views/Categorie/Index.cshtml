
@{
    ViewBag.Title = "Index";
}

<h1>Lista completa de categorii:</h1>
<br />

@foreach (var categ in ViewBag.categorii)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            @categ.titlu
        </div>
        <div class="panel-body">
            <i class="glyphicon glyphicon-user"></i> ID Categorie: @categ.idCategorie
            <br />
        </div>
        <div class="panel panel-footer">
            <a class="btn btn-primary" href="/Categorie/Afisare/@categ.idCategorie">Afișează categoria</a>
            <br />
        </div>
    </div>
}

<br />
<a class="btn btn-success" href="/Categorie/Adaugare" role="button">Adaugă o noua categorie</a>
<a class="btn btn-info" href="/Produs/Index" role="button">Înapoi la lista de produse</a>
