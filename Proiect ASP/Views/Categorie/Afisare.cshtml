
@{
    ViewBag.Title = "Afisare";
}

<h2>@ViewBag.categorie.titlu</h2>

<div class="panel panel-default">
    <div class="panel-body">
        Descriere: @ViewBag.categorie.descriere
        <br />
    </div>
    <div class="panel panel-footer">
        <a class="btn btn-info" href="/Categorie/Editare/@ViewBag.categorie.idCategorie" role="button">Editează aceasta categorie</a>
        <br />
        <br />
        <form method="post" action="/Categorie/Stergere/@ViewBag.categorie.idCategorie">
            @Html.HttpMethodOverride(HttpVerbs.Delete)
            <button class="btn btn-danger" type="submit">Șterge permanent aceasta categorie</button>
            <br />
        </form>
    </div>
</div>
<br />
<h3>Produse din această categorie:</h3>
<br />
@foreach (Proiect_ASP.Models.Produs prod in ViewBag.produse)
{
    @Html.Partial("ProdusSumar", prod)
    <hr />
}