
@{
    ViewBag.Title = "FormEditare";
}

<h2>Editeaza produsul (functionalitate la care ar trebui sa aiba acces doar userii colaboratori / adminii?)</h2>

<form method="post" action="/Produs/Editare/@ViewBag.produs.idProdus">
    @Html.HttpMethodOverride(HttpVerbs.Put)

    <label>Titlu</label>
    <input type="text" name="titlu" value="@ViewBag.produs.titlu" />
    <br />
    <label>Descriere</label>
    <input type="text" name="descriere" value="@ViewBag.produs.descriere" />
    <br />
    <label>Pret</label>
    <input type="number" name="pret" value="@ViewBag.produs.pret" />
    <br />
    <label>Cantitate</label>
    <input type="number" name="cantitate" value="@ViewBag.produs.cantitate" />
    <br />
    <input type="hidden" name="idOwner" value="@ViewBag.produs.idOwner" />
    <br />
    <button type="submit">Salveaza modificarile</button>
    <hr />
</form>
<br />
<form method="post" action="/Produs/ModificaCategoriiAsociate/@ViewBag.produs.idProdus">
    @Html.HttpMethodOverride(HttpVerbs.Delete)

    <select name="categoriiActualizateId" multiple>

        @foreach (var categ in ViewBag.categoriiAsociate)
        {
            <option value="@categ.idCategorie" selected>@categ.titlu</option>
        }
        @foreach (var categ in ViewBag.categoriiNeasociate)
        {
            <option value="@categ.idCategorie">@categ.titlu</option>
        }

    </select>
    <button type="submit">Modifica categoriile</button>

</form>



